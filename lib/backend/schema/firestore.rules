rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /marker/{document} {
      allow create: if request.auth.uid == request.resource.data.user;
      allow read: if request.auth.uid == resource.data.user;
      allow write: if request.auth.uid == resource.data.user;
      allow delete: if request.auth.uid == resource.data.user;
    }

    match /users/{document} {
      allow create: if request.auth.uid == document;
      allow read: if request.auth.uid == document;
      allow write: if request.auth.uid == document;
      allow delete: if false;
    }
  }
}
